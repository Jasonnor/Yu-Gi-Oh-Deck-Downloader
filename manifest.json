{
    "manifest_version": 2,
    "name": "Yu-Gi-Oh-Deck-Downloader",
    "description": "Download Yu-Gi-Oh decks from ocg.xpg.jp for Automatic Dueling System(遊戯王ADS) like YGOPro or DevPro.",
    "version": "0.3",
    "icons": {
        "16": "src/icon16.png",
        "48": "src/icon48.png",
        "128": "src/icon128.png"
    },
    "browser_action": {
        "default_icon": "src/icon.png"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}
